{
    "extends": "astro/tsconfigs/strict",
    "include": [
        ".astro/types.d.ts",
        "**/*"
    ],
    "exclude": [
        "dist"
    ],
    "compilerOptions": {
        "strictNullChecks": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@challenges/*": [
                "./content/challenges/*"
            ],
            "@data/*": [
                "./data/*"
            ]
        },
        "jsx": "react-jsx",
        "jsxImportSource": "react"
    }
}