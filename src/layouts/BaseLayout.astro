---
import HeadSEO from "@/components/core/HeadSEO.astro";
import Header from "@/components/core/Header.astro";

import { LOCALE } from "@data/config";
import type { BaseLayoutProps } from "@/lib/types";
import Copy from "@/components/core/Copy.astro";

const { title, description, image, imageAlt, contentType } =
    Astro.props as BaseLayoutProps;
---

<html lang=`${LOCALE.lang ?? "en"}`>
    <head>
        <HeadSEO
            title={title}
            description={description}
            image={image}
            imageAlt={imageAlt}
            contentType={contentType}
        />
    </head>

    <body class="min-h-screen bg-background text-foreground antialiased">
        <Copy />
        <div class="relative isolate flex min-h-screen flex-col">
            <Header />
            <main class="relative z-10 flex flex-1">
                <div
                    class="container mx-auto flex w-full max-w-6xl flex-col gap-10 px-4 py-10 lg:gap-14 lg:py-14"
                >
                    <slot />
                </div>
            </main>
        </div>
    </body>
</html>
