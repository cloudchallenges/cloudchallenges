---
import BaseLayout from "@/layouts/BaseLayout.astro";
import {
    Card,
    CardHeader,
    CardTitle,
    CardDescription,
    CardContent,
} from "@/components/ui/card";
import setupGraphic from "@/assets/setup.png";
import { Image } from "astro:assets";
---

<BaseLayout>
    <section class="space-y-6 py-8">
        <Card className="bg-card/60">
            <CardHeader>
                <CardTitle className="text-3xl">ImageViewer demo</CardTitle>
                <CardDescription>
                    Clicking the preview will open a modal powered by the shared
                    component.
                </CardDescription>
            </CardHeader>
            <CardContent>
                <Image src={setupGraphic} alt="Project setup hero" />
            </CardContent>
        </Card>
    </section>
</BaseLayout>
