---
import { getCollection } from "astro:content";
import type { ChallengeEntry } from "@/lib/types";

import BaseLayout from "@/layouts/BaseLayout.astro";
import ChallengeCard from "@/components/challenge/ChallengeCard.astro";
import { Badge } from "@/components/ui/badge";

const challenges: ChallengeEntry[] = await getCollection("challenges");
---

<BaseLayout>
    <section class="space-y-8">
        <div class="space-y-3">
            <Badge
                variant="secondary"
                className="w-fit rounded-full px-3 py-1 text-[0.6rem] font-semibold uppercase tracking-[0.35em]"
            >
                Hands-on Labs
            </Badge>
            <h1 class="text-4xl font-bold tracking-tight text-foreground">
                Challenges
            </h1>
            <p
                class="max-w-2xl text-base leading-relaxed text-muted-foreground"
            >
                Pick a hands-on lab to sharpen your cloud skills. Each challenge
                comes with real-world scenarios across AWS, Azure, and GCP.
            </p>
        </div>

        <div class="grid gap-6 md:grid-cols-2 xl:grid-cols-3">
            {challenges.map((entry) => <ChallengeCard entry={entry} />)}
        </div>
    </section>
</BaseLayout>
