import { buttonVariants } from "@/components/ui/button";
import { cn } from "@/lib/utils";

const currentYear = new Date().getFullYear();
---

<footer class="w-full border-t border-border/40 bg-background">
    <div
        class="container mx-auto flex max-w-6xl flex-col items-center justify-center gap-4 px-4 py-6 text-sm text-muted-foreground sm:flex-row"
    >
        <div class="flex items-center gap-1">
            <span>Made with <span class="text-red-500">❤️</span> by</span>
            <a
                href="https://rajeshdas.dev"
                target="_blank"
                rel="noopener noreferrer"
                class="font-medium text-foreground transition-colors hover:text-foreground/80"
            >
                Rajesh Das
            </a>
            <span>· &copy; {currentYear}</span>
        </div>
    </div>
</footer>
