---
/**
 * CTAStrip â€” Primary CTA Strip (big, full-width)
 * Clear call to action to go to the Challenges page
 */
import { Button } from "@/components/ui/button";
---

<section class="relative py-16 md:py-20">
    <!-- Background -->
    <div class="absolute inset-0 bg-primary/5" aria-hidden="true"></div>

    <div class="container relative mx-auto px-4">
        <div class="mx-auto flex max-w-3xl flex-col items-center text-center">
            <!-- Main text -->
            <h2 class="mb-6 text-3xl font-bold tracking-tight md:text-4xl">
                Ready to solve real problems?
            </h2>

            <!-- CTA buttons -->
            <div class="mb-6 flex flex-wrap items-center justify-center gap-4">
                <Button size="lg" className="gap-2 px-8" asChild>
                    <a href="/challenge" aria-label="Browse all challenges">
                        Browse Challenges
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="16"
                            height="16"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            aria-hidden="true"
                        >
                            <path d="M5 12h14"></path>
                            <path d="m12 5 7 7-7 7"></path>
                        </svg>
                    </a>
                </Button>
                <Button variant="ghost" size="lg" asChild>
                    <a
                        href="/discuss"
                        aria-label="Discuss ideas with the community"
                    >
                        Discuss Ideas
                    </a>
                </Button>
            </div>

            <!-- Microcopy -->
            <p class="text-sm text-muted-foreground">
                Free, community-driven, and built for practical learning.
            </p>
        </div>
    </div>
</section>
